extends layout

block content
  .row.page-header
    .col-lg-12
      h1= pageHeader.title
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="/class", method="get", role="form")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="title") Title
          .col-xs-12.col-sm-10
            input#name.form-control(name="title")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="Due") Due Date
          .col-xs-12.col-sm-10
            input#name.form-control(name="Due")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="points") Points
          .col-xs-12.col-sm-10
            input#name.form-control(name="points")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="rating") Status
          .col-xs-12.col-sm-2
            select#rating.form-control.input-sm(name="rating")
              option Not Started
              option Started
              option Completed
              option Submitted
        button.btn.btn-default.pull-right Add Assignment
    .col-xs-12.col-md-4
